<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>What-a-Burger!</h1>
            <img src="assets/images/burger.png" alt="What a burger">
        </div>
        {{!-- end of heading --}}
        <section>
            {{!-- main body --}}
            <div class="row">
                <div class="col s6">
                    <h2>Ready to Eat Burgers</h2>
                    {{#each burgers}} {{#unless this.devoured}}
                    <div>
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                        </form>
                    </div>
                    {{/unless}} {{/each}}
                    <div class="col s6">
                        <h2>Devoured Burgers</h2>
                    </div>
                    {{!-- end row --}}
                </div>
        </section>
        <button class="btn waves-effect waves-light" type="submit" name="action">Send-a-Burger
            <i class="material-icons right">send</i>
        </button>

        </div>

    </div>